@model BusWireMVC.ViewModels.BusInfoViewModel

@{
    ViewBag.Title = "Bus Information";
}
<h1>Bus Timetable Results</h1>

@for (int i = 0; i < Model.BusStops.Count; i++) {
    <h2>@Model.BusStops[i].CommonName</h2>  

    for (int j = 0; j < Model.BusStops[i].NextArrivals.Count; j++)
    {
        @Html.Partial("Arrival", Model.BusStops[i].NextArrivals.Count;[j])
    
  <p> 
    @Model.BusStops[i].NextArrivals[j].LineName

    @(Model.BusStops[i].NextArrivals[j].TimeToStation / 60)minutes
    @(Model.BusStops[i].NextArrivals[j].TimeToStation % 60)seconds</p>
    } 

}

@Html.Partial("Arrival")